FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY ["TecoApi.csproj", "./"]
RUN dotnet restore "TecoApi.csproj"

COPY . .
RUN dotnet publish "TecoApi.csproj" -c Release -o /app/publish /p:PublishTrimmed=true

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish ./

ENV ASPNETCORE_URLS=http://+:5000
ENV ASPNETCORE_ENVIRONMENT=Production

EXPOSE 5000
ENTRYPOINT ["dotnet", "TecoApi.dll"]
